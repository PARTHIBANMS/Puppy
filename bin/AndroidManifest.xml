<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.puppy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.puppy.MainActivity"
            android:label="Puppy Game"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.puppy.KidName"
            android:label="Kid Name Area"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.puppy.PlayScreen"
            android:label="@string/title_activity_play_screen"
            android:screenOrientation="landscape" >
        </activity>
        
    </application>

</manifest>
